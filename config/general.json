{
  "interface_language": "en",
  "font": "JetBrains Mono",
  "default_fonts": [
    "JetBrains Mono",
    "Consolas",
    "Segoe UI",
    "Calibri",
    "Arial",
    "Verdana",
    "Tahoma"
  ],
  "start_at_startup": false,
  "show_homepage_at_startup": true,
  "always_show_transtale": false,
  "dest_lang": "vi",
  "translation_model": "google",
  "translation_models": {
    "google": "🌐 Google Translator",
    "marian": "🤖 Marian MT (Offline)"
  },
  "lang_display": {
    "en": "🇺🇸 English",
    "vi": "🇻🇳 Tiếng Việt",
    "ja": "🇯🇵 日本語",
    "ko": "🇰🇷 한국어",
    "zh-cn": "🇨🇳 中文(简体)",
    "zh-tw": "🇹🇼 中文(繁體)",
    "fr": "🇫🇷 Français",
    "de": "🇩🇪 Deutsch",
    "ru": "🇷🇺 Русский",
    "es": "🇪🇸 Español",
    "th": "🇹🇭 ไทย"
  },
  "enable_ctrl_tracking": false,
  "enable_hotkeys": false,
  "hotkey": "ctrl+F+shift",
  "clipboard_hotkey": "f2+shift",
  "ctrl_to_exit": false,
  "save_translate_history": true,
  "max_history_items": 100,
  "auto_save_after": 3000,
  "icon_size": 60,
  "icon_dissapear_after": 3,
  "popup_dissapear_after": 2,
  "max_length_on_popup": 300
}